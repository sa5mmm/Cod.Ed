var Alexa = require('alexa-sdk');

exports.handler = function(event, context, callback) {
    var alexa = Alexa.handler(event, context);
    // alexa.dynamoDBTableName = 'YourTableName'; // creates new table for userid:session.attributes
    alexa.registerHandlers(handlers);
    alexa.execute();
};

var handlers = {
    'LaunchRequest': function () {
        this.emit(':ask','launch request'); //function call 
    },
    'HelloWorldIntent': function () {
        this.emit(':ask', 'Hello World from Alexa!'); 
    },
    
    //ask waits for the user to respond again
    //tell turns off the mic
    
    
    'AMAZON.FallbackIntent': function(){
        this.emit(':ask','Fall Back Intent');
    },
    'AMAZON.CancelIntent': function(){
        this.emit(':tell', 'Cancel Intent');
    },
    'AMAZON.HelpIntent': function(){
        this.emit(':ask','Say Hello or Goodbye.');
    },
    'AMAZON.StopIntent': function(){
        this.emit('':tell', 'Stop Intent');
    },
};
